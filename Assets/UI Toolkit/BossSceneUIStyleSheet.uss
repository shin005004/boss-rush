.BloodBar {
    flex-grow: 0;
    position: absolute;
    flex-shrink: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(79, 4, 4);
}

.BossBlood--Closed {
    flex-grow: 0;
    flex-shrink: 0;
    -unity-background-scale-mode: scale-to-fit;
    width: 100%;
    height: 18.5%;
    opacity: 0;
}

.BossBlood--Opened {
    opacity: 1;
    transition-duration: 1s;
}
